{Real write}

message writeint:int nr:int
begin
	none
end

message writechar:charcter char:character
begin
	none
end

message readfloat:real
begin
	none
end

message real_write:none number:real
begin
	define integer:int
	define fractional:int

	integer:=number
	fractional := real - integer * 1000

	[io writeint nr:integer]
	[io writechar char:"."]
	[io writeint nr:fractional]
end

define i:real

i:=[io readfloat]

[module real_write number : i]